@model MeetingMinutes.Models.Meeting

<div class="container mt-4">

    <!-- Show any error message coming from the controller -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Only shows validation summary when there are model errors -->
    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
    }

    <div class="card">
        <div class="card-body">
            <h2 class="card-title mb-4">Meeting Details</h2>

            <div class="mb-3">
                <p><strong>Meeting Code:</strong> @Model.MeetingCode</p>
                <p><strong>Meeting Type:</strong> @Model.MeetingType?.Name</p>
                <p><strong>Date &amp; Time:</strong> @Model.MeetingDate.ToString("yyyy-MM-dd HH:mm")</p>
            </div>

            <hr />

            <h3 class="mb-3">Meeting Items</h3>

            @if (Model.ItemStatuses != null && Model.ItemStatuses.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="width:15%">Title</th>
                            <th style="width:25%">Description</th>
                            <th style="width:10%">Responsible</th>
                            <th style="width:10%">Status</th>
                            <th style="width:25%">Comment</th>
                            <th class="nowrap" style="width:10%">Updated On</th>
                            <th style="width:5%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.ItemStatuses)
                        {
                            <tr>
                                <td class="wrap-text">@s.MeetingItem?.Title</td>
                                <td class="wrap-text">@s.MeetingItem?.Description</td>
                                <td>@s.MeetingItem?.ResponsiblePerson</td>
                                <td>@s.Status</td>
                                <td class="wrap-text">@s.Comment</td>
                                <td class="nowrap">@s.UpdatedOn.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <a asp-action="UpdateStatus" asp-route-statusId="@s.StatusId">
                                        Update
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No items linked to this meeting.</p>
            }

            <hr />

            <h3 class="mb-3">Add new item to this meeting</h3>

            <form asp-action="AddItem" method="post">
                <input type="hidden" name="meetingId" value="@Model.MeetingId" />

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" id="title" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="responsiblePerson" class="form-label">Responsible Person</label>
                    <input type="text" name="responsiblePerson" id="responsiblePerson" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" id="description" rows="3" class="form-control"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Add Item</button>
            </form>

            <hr />

            <p class="mt-3">
                <a asp-action="Create">Capture Another Meeting</a>
            </p>

            <div class="mt-2">
                <a asp-action="Index">Back to Meetings</a>
                <span> | </span>
                <a asp-controller="Home" asp-action="Index">Home</a>
            </div>
        </div>
    </div>
</div>
