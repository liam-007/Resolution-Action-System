@model MeetingMinutes.ViewModels.CreateMeetingViewModel

<div class="container mt-4">

    <!-- Show any error message coming from the controller -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Only shows validation summary when there are model errors -->
    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
    }

    <div class="card">
        <div class="card-body">
            <h2 class="card-title mb-4">Capture New Meeting</h2>

           
            <form method="post">

                <!-- Meeting details -->
                <div class="mb-3">
                    <label class="form-label">Meeting Type</label>
                    <select asp-for="MeetingTypeId"
                            asp-items="@(new SelectList(Model.MeetingTypes, "MeetingTypeId", "Name"))"
                            id="MeetingTypeId"
                            class="form-select">
                        <option value="">-- Select --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Meeting Date</label>
                    <input asp-for="MeetingDate" type="datetime-local" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Meeting Code</label>
                    <input asp-for="MeetingCode" id="MeetingCode" class="form-control" readonly />
                </div>

                <hr />

                <h3 class="mb-3">Carry Forward Items</h3>

                @if (Model.PreviousItems != null && Model.PreviousItems.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th style="width:8%">Select</th>
                                <th style="width:42%">Title</th>
                                <th style="width:25%">Responsible</th>
                                <th style="width:25%">Last Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.PreviousItems.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input asp-for="PreviousItems[i].IsSelected" />

                                        <!-- Required for model binding -->
                                        <input asp-for="PreviousItems[i].MeetingItemId" type="hidden" />
                                        <input asp-for="PreviousItems[i].Title" type="hidden" />
                                        <input asp-for="PreviousItems[i].ResponsiblePerson" type="hidden" />
                                        <input asp-for="PreviousItems[i].LastStatus" type="hidden" />
                                    </td>

                                    <td>@Model.PreviousItems[i].Title</td>
                                    <td>@Model.PreviousItems[i].ResponsiblePerson</td>
                                    <td>@Model.PreviousItems[i].LastStatus</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (Model.PreviousMeetingDate != null)
                    {
                        <p>
                            <strong>Most recent item date:</strong>
                            @Model.PreviousMeetingDate.Value.ToString("yyyy-MM-dd HH:mm")
                        </p>
                    }
                }
                else
                {
                    <p>No items available to carry forward. The meeting will be created with no items.</p>
                }

                <div class="mt-3 d-flex gap-2">
                    
                    <button type="submit"
                            formaction="@Url.Action("LoadItems", "Meeting")"
                            formmethod="post"
                            class="btn btn-primary">
                        Load Items
                    </button>

                   
                    <button type="submit"
                            formaction="@Url.Action("CreateMeeting", "Meeting")"
                            formmethod="post"
                            class="btn btn-success">
                        Create Meeting
                    </button>
                </div>
            </form>

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index">Back to Home</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const typeSelect = document.getElementById('MeetingTypeId');
        const codeInput = document.getElementById('MeetingCode');

        const getCodeUrl = '@Url.Action("GetNextCode", "Meeting")';

        typeSelect.addEventListener('change', function () {
            const typeId = this.value;

            if (!typeId) {
                codeInput.value = "";
                return;
            }

            fetch(getCodeUrl + '?meetingTypeId=' + typeId)
                .then(response => response.json())
                .then(data => {
                    codeInput.value = data.code || "";
                })
                .catch(error => {
                    console.error('Error getting meeting code:', error);
                    codeInput.value = "";
                });
        });
    </script>
}
